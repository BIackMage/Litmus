<Page x:Class="Litmus.Views.TestRunsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Test Runs"
      Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Test Runs" Style="{StaticResource Header}"/>
                <TextBlock Text="View and manage test execution runs" Style="{StaticResource Muted}" Margin="0,4,0,0"/>
            </StackPanel>

            <Button Grid.Column="1" Content="+ New Test Run" Style="{StaticResource PrimaryButton}"
                    VerticalAlignment="Center"
                    Click="NewTestRun_Click"/>
        </Grid>

        <!-- Filter -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,16" Padding="16,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Project:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="ProjectFilter" Width="200"
                          DisplayMemberPath="Name"
                          SelectionChanged="ProjectFilter_SelectionChanged"/>
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="24,0,8,0"/>
                <ComboBox x:Name="StatusFilter" Width="150"
                          SelectionChanged="StatusFilter_SelectionChanged">
                    <ComboBoxItem Content="All" IsSelected="True"/>
                    <ComboBoxItem Content="Has Failures"/>
                    <ComboBoxItem Content="All Passed"/>
                    <ComboBoxItem Content="In Progress"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Test Runs List -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="0">
            <DataGrid x:Name="TestRunsGrid" AutoGenerateColumns="False"
                      IsReadOnly="True" HeadersVisibility="Column"
                      SelectionMode="Single"
                      MouseDoubleClick="TestRunsGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Project" Binding="{Binding ProjectName, Mode=OneWay}" Width="200"/>
                    <DataGridTextColumn Header="Build Version" Binding="{Binding BuildVersion, Mode=OneWay}" Width="120"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding CreatedDate, Mode=OneWay, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" Width="150"/>
                    <DataGridTemplateColumn Header="Results" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding PassCount, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}"/>
                                    <TextBlock Text=" / " Foreground="{StaticResource ForegroundDimBrush}"/>
                                    <TextBlock Text="{Binding FailCount, Mode=OneWay}" Foreground="{StaticResource ErrorBrush}"/>
                                    <TextBlock Text=" / " Foreground="{StaticResource ForegroundDimBrush}"/>
                                    <TextBlock Text="{Binding TotalCount, Mode=OneWay}" Foreground="{StaticResource ForegroundDimBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Progress" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ProgressBar Value="{Binding CompletionPercent, Mode=OneWay}" Maximum="100"
                                                 Height="16" Background="{StaticResource BackgroundLightBrush}"
                                                 Foreground="{StaticResource AccentBrush}"/>
                                    <TextBlock Text="{Binding CompletionPercent, Mode=OneWay, StringFormat='{}{0:F0}%'}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontSize="10"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Continue" Padding="8,2" Margin="0,0,4,0"
                                            Click="ContinueRun_Click"/>
                                    <Button Content="View" Padding="8,2" Margin="0,0,4,0"
                                            Click="ViewRun_Click"/>
                                    <Button Content="Delete" Padding="8,2"
                                            Style="{StaticResource DangerButton}"
                                            Click="DeleteRun_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <TextBlock x:Name="NoRunsText" Grid.Row="2"
                   Text="No test runs found. Create a new test run to get started!"
                   Style="{StaticResource Muted}"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Visibility="Collapsed"/>
    </Grid>
</Page>
