<Page x:Class="Litmus.Views.TestDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Test Details"
      Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="TestNameText" Text="Test" Style="{StaticResource Header}"/>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock x:Name="ProjectNameText" Style="{StaticResource Muted}"/>
                    <TextBlock Text=" / " Style="{StaticResource Muted}"/>
                    <TextBlock x:Name="CategoryNameText" Style="{StaticResource Muted}"/>
                </StackPanel>
            </StackPanel>

            <Button Grid.Column="1" Content="Edit Test" Padding="12,6"
                    VerticalAlignment="Top"
                    Click="EditTest_Click"/>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Test Info -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="DescriptionText" TextWrapping="Wrap"/>

                        <TextBlock Text="Command / Syntax" FontWeight="SemiBold" Margin="0,24,0,8"/>
                        <Border Background="{StaticResource BackgroundDarkBrush}" CornerRadius="4" Padding="12">
                            <TextBox x:Name="CommandText" IsReadOnly="True" Background="Transparent"
                                     BorderThickness="0" TextWrapping="Wrap" FontFamily="Consolas"/>
                        </Border>

                        <TextBlock Text="Expected Result" FontWeight="SemiBold" Margin="0,24,0,8"/>
                        <TextBlock x:Name="ExpectedResultText" TextWrapping="Wrap"/>

                        <TextBlock Text="Preparation Steps" FontWeight="SemiBold" Margin="0,24,0,8"/>
                        <TextBlock x:Name="PrepStepsText" TextWrapping="Wrap"/>

                        <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
                            <TextBlock Text="Priority: " FontWeight="SemiBold"/>
                            <TextBlock x:Name="PriorityText"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Test History -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="12,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Test History" Style="{StaticResource SubHeader}" Margin="0,0,0,16"/>

                    <ListBox x:Name="HistoryList" Grid.Row="1"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="0,0,0,1" Padding="0,8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" Margin="0,0,8,0"
                                                     Fill="{Binding StatusColor, Mode=OneWay}"/>
                                            <TextBlock Text="{Binding BuildVersion, Mode=OneWay}" FontWeight="SemiBold"/>
                                            <TextBlock Text=" - " Foreground="{StaticResource ForegroundDimBrush}"/>
                                            <TextBlock Text="{Binding Date, Mode=OneWay, StringFormat='{}{0:MMM dd, yyyy}'}"
                                                       Foreground="{StaticResource ForegroundDimBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Row="1" Text="{Binding Notes, Mode=OneWay}"
                                                   Style="{StaticResource Muted}" TextWrapping="Wrap"
                                                   Margin="18,4,0,0"
                                                   Visibility="{Binding NotesVisibility, Mode=OneWay}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock x:Name="NoHistoryText" Grid.Row="1"
                               Text="No test history yet."
                               Style="{StaticResource Muted}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
