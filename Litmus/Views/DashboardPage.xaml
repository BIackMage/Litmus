<Page x:Class="Litmus.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Dashboard"
      Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Dashboard" Style="{StaticResource Header}"/>
            <TextBlock Text="Overview of your testing projects" Style="{StaticResource Muted}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Stats Cards -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,24">
            <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock x:Name="TotalProjectsText" Text="0" FontSize="36" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Total Projects" Style="{StaticResource Muted}"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="6,0">
                <StackPanel>
                    <TextBlock x:Name="TotalTestsText" Text="0" FontSize="36" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Total Tests" Style="{StaticResource Muted}"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="6,0">
                <StackPanel>
                    <TextBlock x:Name="PassRateText" Text="0%" FontSize="36" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                    <TextBlock Text="Overall Pass Rate" Style="{StaticResource Muted}"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock x:Name="RecentRunsText" Text="0" FontSize="36" FontWeight="Bold" Foreground="{StaticResource WarningBrush}"/>
                    <TextBlock Text="Test Runs (30 days)" Style="{StaticResource Muted}"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Recent Projects -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Recent Projects" Style="{StaticResource SubHeader}"/>
                        <Button Content="+ New Project" Style="{StaticResource PrimaryButton}"
                                Margin="16,0,0,0" Padding="12,4"
                                Click="NewProject_Click"/>
                    </StackPanel>

                    <ListBox x:Name="RecentProjectsList" Grid.Row="1"
                             Background="Transparent" BorderThickness="0"
                             SelectionChanged="RecentProjectsList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,4">
                                    <TextBlock Text="{Binding Name, Mode=OneWay}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Description, Mode=OneWay}" Style="{StaticResource Muted}"
                                               TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock x:Name="NoProjectsText" Grid.Row="1"
                               Text="No projects yet. Create your first project!"
                               Style="{StaticResource Muted}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Recent Test Runs -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="12,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Recent Test Runs" Style="{StaticResource SubHeader}" Margin="0,0,0,16"/>

                    <ListBox x:Name="RecentRunsList" Grid.Row="1"
                             Background="Transparent" BorderThickness="0"
                             SelectionChanged="RecentRunsList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding ProjectName, Mode=OneWay}" FontWeight="SemiBold"/>
                                        <TextBlock Style="{StaticResource Muted}">
                                            <Run Text="Build"/>
                                            <Run Text="{Binding BuildVersion, Mode=OneWay}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding CreatedDate, Mode=OneWay, StringFormat='{}{0:MMM dd, yyyy}'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding PassCount, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}" Margin="0,0,4,0"/>
                                        <TextBlock Text="/" Foreground="{StaticResource ForegroundDimBrush}"/>
                                        <TextBlock Text="{Binding TotalCount, Mode=OneWay}" Foreground="{StaticResource ForegroundDimBrush}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock x:Name="NoRunsText" Grid.Row="1"
                               Text="No test runs yet. Start testing!"
                               Style="{StaticResource Muted}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
