<Page x:Class="Litmus.Views.DiffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Compare Test Runs"
      Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Compare Test Runs" Style="{StaticResource Header}"/>
            <TextBlock Text="View differences between two test runs" Style="{StaticResource Muted}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Selectors -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,16" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Left Run (Baseline)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="LeftRunComboBox" DisplayMemberPath="DisplayText"
                              SelectionChanged="RunSelection_Changed"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="vs" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center" Margin="24,16,24,0"
                           Foreground="{StaticResource ForegroundDimBrush}"/>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Right Run (Compare)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="RightRunComboBox" DisplayMemberPath="DisplayText"
                              SelectionChanged="RunSelection_Changed"/>
                </StackPanel>

                <Button Grid.Column="3" Content="Compare" Style="{StaticResource PrimaryButton}"
                        Padding="16,8" Margin="24,16,0,0" VerticalAlignment="Bottom"
                        Click="Compare_Click"/>
            </Grid>
        </Border>

        <!-- Results -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Regressions (Pass -> Fail) -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <Ellipse Width="12" Height="12" Fill="{StaticResource ErrorBrush}" Margin="0,0,8,0"/>
                        <TextBlock Text="Regressions" Style="{StaticResource SubHeader}"/>
                        <TextBlock x:Name="RegressionsCount" Text=" (0)"
                                   Foreground="{StaticResource ErrorBrush}" Style="{StaticResource SubHeader}"/>
                    </StackPanel>

                    <ListBox x:Name="RegressionsList" Grid.Row="1"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,4">
                                    <TextBlock Text="{Binding TestName, Mode=OneWay}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding CategoryName, Mode=OneWay}" Style="{StaticResource Muted}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock x:Name="NoRegressionsText" Grid.Row="1"
                               Text="No regressions found"
                               Style="{StaticResource Muted}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Foreground="{StaticResource SuccessBrush}"/>
                </Grid>
            </Border>

            <!-- Fixes (Fail -> Pass) -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <Ellipse Width="12" Height="12" Fill="{StaticResource SuccessBrush}" Margin="0,0,8,0"/>
                        <TextBlock Text="Fixes" Style="{StaticResource SubHeader}"/>
                        <TextBlock x:Name="FixesCount" Text=" (0)"
                                   Foreground="{StaticResource SuccessBrush}" Style="{StaticResource SubHeader}"/>
                    </StackPanel>

                    <ListBox x:Name="FixesList" Grid.Row="1"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,4">
                                    <TextBlock Text="{Binding TestName, Mode=OneWay}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding CategoryName, Mode=OneWay}" Style="{StaticResource Muted}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock x:Name="NoFixesText" Grid.Row="1"
                               Text="No fixes found"
                               Style="{StaticResource Muted}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Unchanged -->
            <Border Grid.Column="2" Style="{StaticResource Card}" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <Ellipse Width="12" Height="12" Fill="{StaticResource ForegroundDimBrush}" Margin="0,0,8,0"/>
                        <TextBlock Text="Unchanged" Style="{StaticResource SubHeader}"/>
                        <TextBlock x:Name="UnchangedCount" Text=" (0)"
                                   Foreground="{StaticResource ForegroundDimBrush}" Style="{StaticResource SubHeader}"/>
                    </StackPanel>

                    <ListBox x:Name="UnchangedList" Grid.Row="1"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                    <Ellipse Width="8" Height="8" Fill="{Binding StatusColor, Mode=OneWay}" Margin="0,0,8,0"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TestName, Mode=OneWay}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
