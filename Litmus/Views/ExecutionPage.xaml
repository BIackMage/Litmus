<Page x:Class="Litmus.Views.ExecutionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Test Execution"
      Background="{StaticResource BackgroundDarkBrush}"
      Focusable="True"
      KeyDown="Page_KeyDown">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Test Execution - " Style="{StaticResource Header}"/>
                    <TextBlock x:Name="ProjectNameText" Style="{StaticResource Header}"
                               Foreground="{StaticResource AccentBrush}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="Build " Style="{StaticResource Muted}"/>
                    <TextBlock x:Name="BuildVersionText" Style="{StaticResource Muted}"/>
                    <TextBlock Text=" | Test " Style="{StaticResource Muted}" Margin="16,0,0,0"/>
                    <TextBlock x:Name="CurrentTestIndexText" Style="{StaticResource Muted}"/>
                    <TextBlock Text=" of " Style="{StaticResource Muted}"/>
                    <TextBlock x:Name="TotalTestsText" Style="{StaticResource Muted}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Progress: " Style="{StaticResource Muted}"/>
                <TextBlock x:Name="PassedCountText" Foreground="{StaticResource SuccessBrush}"/>
                <TextBlock Text=" / " Style="{StaticResource Muted}"/>
                <TextBlock x:Name="FailedCountText" Foreground="{StaticResource ErrorBrush}"/>
                <TextBlock Text=" / " Style="{StaticResource Muted}"/>
                <TextBlock x:Name="BlockedCountText" Foreground="#CC7000"/>
                <TextBlock Text=" / " Style="{StaticResource Muted}"/>
                <TextBlock x:Name="NotRunCountText" Foreground="{StaticResource ForegroundDimBrush}"/>
                <Button Content="Exit" Padding="12,6" Margin="24,0,0,0"
                        Click="Exit_Click"/>
            </StackPanel>
        </Grid>

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar" Grid.Row="0" Height="4"
                     VerticalAlignment="Bottom" Margin="0,0,0,-8"
                     Foreground="{StaticResource AccentBrush}"
                     Background="{StaticResource BackgroundLightBrush}"/>

        <!-- Test Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Test Details -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Test Name -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Border x:Name="PriorityBadge" CornerRadius="4" Padding="8,2" Margin="0,0,12,0">
                                <TextBlock x:Name="PriorityText" FontSize="11" FontWeight="SemiBold"/>
                            </Border>
                            <TextBlock x:Name="CategoryText" Style="{StaticResource Muted}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock x:Name="TestNameText" FontSize="24" FontWeight="SemiBold"
                                       TextWrapping="Wrap" VerticalAlignment="Center"/>
                            <Button x:Name="EditTestButton" Content="Edit Test" Padding="12,6" Margin="16,0,0,0"
                                    VerticalAlignment="Center" Click="EditTest_Click"/>
                            <Button x:Name="MoveToEndButton" Content="Move to End" Padding="12,6" Margin="8,0,0,0"
                                    VerticalAlignment="Center" Click="MoveToEnd_Click"
                                    ToolTip="Push this test to the end of the list"/>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Margin="0,0,0,24"/>

                        <!-- Command -->
                        <TextBlock Text="Command / Syntax" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Border Background="{StaticResource BackgroundDarkBrush}" CornerRadius="4" Padding="12">
                            <Grid>
                                <TextBox x:Name="CommandText" IsReadOnly="True" Background="Transparent"
                                         BorderThickness="0" TextWrapping="Wrap" FontFamily="Consolas"/>
                                <Button Content="Copy" HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Padding="8,4" Click="CopyCommand_Click"/>
                            </Grid>
                        </Border>

                        <!-- Expected Result -->
                        <TextBlock Text="Expected Result" FontWeight="SemiBold" Margin="0,24,0,8"/>
                        <TextBlock x:Name="ExpectedResultText" TextWrapping="Wrap" Margin="0,0,0,24"/>

                        <!-- Prep Steps -->
                        <TextBlock Text="Preparation Steps" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock x:Name="PrepStepsText" TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Result Panel -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="12,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Previous Result -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="Previous Result" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="PreviousStatusIndicator" Width="12" Height="12" Margin="0,0,8,0"/>
                            <TextBlock x:Name="PreviousStatusText"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Current Result -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Mark Result" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <UniformGrid Columns="2" Margin="0,0,0,8">
                            <Button x:Name="PassButton" Content="PASS (P)" Style="{StaticResource SuccessButton}"
                                    Margin="0,0,6,0" Padding="0,12"
                                    Click="Pass_Click"/>
                            <Button x:Name="FailButton" Content="FAIL (F)" Style="{StaticResource DangerButton}"
                                    Margin="6,0,0,0" Padding="0,12"
                                    Click="Fail_Click"/>
                        </UniformGrid>
                        <Button x:Name="SkipButton" Content="SKIP - Come Back Later (S)"
                                Padding="0,8" Margin="0,0,0,8"
                                Click="Skip_Click"/>
                        <Button x:Name="BlockedButton" Content="BLOCKED (B)"
                                Padding="0,8" Margin="0,0,0,8"
                                Background="#CC7000" Foreground="White"
                                Click="Blocked_Click"
                                ToolTip="Mark test as blocked - cannot be executed due to external dependency"/>

                        <!-- Quick Fail Templates -->
                        <ComboBox x:Name="FailTemplateComboBox" Margin="0,8,0,0"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="FailTemplate_SelectionChanged">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </StackPanel>

                    <!-- Notes -->
                    <StackPanel Grid.Row="2" Margin="0,16,0,0">
                        <TextBlock Text="Notes" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox x:Name="NotesTextBox"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Visible"
                                 Height="150"/>
                    </StackPanel>

                    <!-- Attachments -->
                    <StackPanel Grid.Row="3" Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Attachments" FontWeight="SemiBold"/>
                            <Button Content="+ Add" Padding="8,2" Margin="12,0,0,0"
                                    Click="AddAttachment_Click"/>
                            <Button Content="ðŸ“· Screenshot" Padding="8,2" Margin="8,0,0,0"
                                    Click="CaptureScreenshot_Click"
                                    ToolTip="Capture screenshot and attach (Ctrl+Shift+S)"/>
                        </StackPanel>
                        <ListBox x:Name="AttachmentsList" MaxHeight="100"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding FileName, Mode=OneWay}" Margin="0,0,8,0"/>
                                        <Button Content="X" Padding="4,0" FontSize="10"
                                                Click="RemoveAttachment_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Navigation -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="PrevButton" Content="Previous (â†)"
                    Padding="16,8" Click="Previous_Click"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="JumpToNotRunButton" Content="Next Not Run (N)" Padding="12,6" Margin="0,0,16,0"
                        Click="JumpToNotRun_Click"/>
                <TextBlock Text="Jump to #: " VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="JumpToTextBox" Width="60" TextAlignment="Center"
                         KeyDown="JumpTo_KeyDown"/>
                <Button Content="Go" Padding="12,6" Margin="8,0,0,0"
                        Click="JumpTo_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="Save &amp; Next (â†’)" Style="{StaticResource PrimaryButton}"
                        Padding="16,8" Click="SaveAndNext_Click"/>
            </StackPanel>
        </Grid>

        <!-- Keyboard Shortcuts Help -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}"
                CornerRadius="4" Padding="12,8" HorizontalAlignment="Left"
                VerticalAlignment="Bottom" Margin="0,0,0,48">
            <TextBlock Style="{StaticResource Muted}">
                <Run Text="Shortcuts: "/>
                <Run Text="P" FontWeight="Bold"/> <Run Text="= Pass  "/>
                <Run Text="F" FontWeight="Bold"/> <Run Text="= Fail  "/>
                <Run Text="B" FontWeight="Bold"/> <Run Text="= Blocked  "/>
                <Run Text="S" FontWeight="Bold"/> <Run Text="= Skip  "/>
                <Run Text="N" FontWeight="Bold"/> <Run Text="= Next Not Run  "/>
                <Run Text="â†/â†’" FontWeight="Bold"/> <Run Text="= Navigate  "/>
                <Run Text="(Auto-saves on navigation)" Foreground="{StaticResource SuccessBrush}"/>
            </TextBlock>
        </Border>
    </Grid>
</Page>
