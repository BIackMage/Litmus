<Page x:Class="Litmus.Views.TestEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Edit Test"
      Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock x:Name="PageTitle" Text="New Test" Style="{StaticResource Header}"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Style="{StaticResource Card}">
                <StackPanel MaxWidth="700" HorizontalAlignment="Left">
                    <TextBlock Text="Test Name" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="NameTextBox" MaxLength="500"/>

                    <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,16,0,8"/>
                    <TextBox x:Name="DescriptionTextBox"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Height="80" VerticalScrollBarVisibility="Auto"
                             MaxLength="4000"/>

                    <TextBlock Text="Command / Syntax" FontWeight="SemiBold" Margin="0,16,0,8"/>
                    <TextBox x:Name="CommandTextBox"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Height="80" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             MaxLength="4000"/>

                    <TextBlock Text="Expected Result" FontWeight="SemiBold" Margin="0,16,0,8"/>
                    <TextBox x:Name="ExpectedResultTextBox"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Height="80" VerticalScrollBarVisibility="Auto"
                             MaxLength="4000"/>

                    <TextBlock Text="Preparation Steps" FontWeight="SemiBold" Margin="0,16,0,8"/>
                    <TextBox x:Name="PrepStepsTextBox"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Height="80" VerticalScrollBarVisibility="Auto"
                             MaxLength="4000"/>

                    <TextBlock Text="Priority" FontWeight="SemiBold" Margin="0,16,0,8"/>
                    <ComboBox x:Name="PriorityComboBox" Width="150" HorizontalAlignment="Left">
                        <ComboBoxItem Content="Low" Tag="0"/>
                        <ComboBoxItem Content="Medium" Tag="1" IsSelected="True"/>
                        <ComboBoxItem Content="High" Tag="2"/>
                        <ComboBoxItem Content="Critical" Tag="3"/>
                    </ComboBox>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="Cancel" Padding="16,8" Margin="0,0,12,0"
                    Click="Cancel_Click"/>
            <Button Content="Save Test" Style="{StaticResource PrimaryButton}" Padding="16,8"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Page>
