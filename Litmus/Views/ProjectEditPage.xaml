<Page x:Class="Litmus.Views.ProjectEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Edit Project"
      Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock x:Name="PageTitle" Text="New Project" Style="{StaticResource Header}"/>
            <TextBlock Text="Create or edit project details" Style="{StaticResource Muted}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Form -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
            <StackPanel MaxWidth="800" HorizontalAlignment="Left">
                <TextBlock Text="Project Name" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox x:Name="NameTextBox" MaxLength="200" MinWidth="500" FontSize="14" Padding="8,6"/>

                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,24,0,8"/>
                <TextBox x:Name="DescriptionTextBox"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="200"
                         MinWidth="500"
                         FontSize="14"
                         Padding="8,6"
                         VerticalScrollBarVisibility="Auto"
                         MaxLength="2000"/>
                <TextBlock Text="Describe what this project tests - include relevant links, notes, or context for testers."
                           Style="{StaticResource Muted}" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="Cancel" Padding="16,8" Margin="0,0,12,0"
                    Click="Cancel_Click"/>
            <Button Content="Save Project" Style="{StaticResource PrimaryButton}" Padding="16,8"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Page>
