<Page x:Class="Litmus.Views.TestRunDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Test Run Details"
      Background="{StaticResource BackgroundDarkBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ProjectNameText" Text="Project" Style="{StaticResource Header}"/>
                    <TextBlock Text=" - Build " Style="{StaticResource Header}"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                    <TextBlock x:Name="BuildVersionText" Style="{StaticResource Header}"
                               Foreground="{StaticResource AccentBrush}"/>
                </StackPanel>
                <TextBlock x:Name="DateText" Style="{StaticResource Muted}" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                <Button Content="Continue Testing" Style="{StaticResource PrimaryButton}"
                        Padding="12,6" Margin="0,0,8,0"
                        Click="ContinueTesting_Click"/>
                <Button Content="Compare Runs" Padding="12,6"
                        Click="CompareRuns_Click"/>
            </StackPanel>
        </Grid>

        <!-- Stats -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,24">
            <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock x:Name="PassedText" Text="0" FontSize="32" FontWeight="Bold"
                               Foreground="{StaticResource SuccessBrush}"/>
                    <TextBlock Text="Passed" Style="{StaticResource Muted}"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="6,0">
                <StackPanel>
                    <TextBlock x:Name="FailedText" Text="0" FontSize="32" FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"/>
                    <TextBlock Text="Failed" Style="{StaticResource Muted}"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="6,0">
                <StackPanel>
                    <TextBlock x:Name="NotRunText" Text="0" FontSize="32" FontWeight="Bold"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                    <TextBlock Text="Not Run" Style="{StaticResource Muted}"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock x:Name="PassRateText" Text="0%" FontSize="32" FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Pass Rate" Style="{StaticResource Muted}"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Results -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,12">
                    <TextBlock Text="Test Results" Style="{StaticResource SubHeader}"/>
                    <ComboBox x:Name="FilterComboBox" Width="150" Margin="16,0,0,0"
                              SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Tests" IsSelected="True"/>
                        <ComboBoxItem Content="Passed Only"/>
                        <ComboBoxItem Content="Failed Only"/>
                        <ComboBoxItem Content="Not Run Only"/>
                    </ComboBox>
                </StackPanel>

                <DataGrid x:Name="ResultsGrid" Grid.Row="1"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          MouseDoubleClick="ResultsGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Status" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="12" Height="12" Fill="{Binding StatusColor, Mode=OneWay}"
                                             HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Test Name" Binding="{Binding TestName, Mode=OneWay}" Width="250"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding CategoryName, Mode=OneWay}" Width="150"/>
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes, Mode=OneWay}" Width="*"/>
                        <DataGridTextColumn Header="Executed" Binding="{Binding ExecutedDate, Mode=OneWay, StringFormat='{}{0:HH:mm}'}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>
