<Window x:Class="Litmus.Windows.TestEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Test"
        Width="600" Height="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Edit Test" FontSize="20" FontWeight="Bold"
                   Foreground="#e0e0e0" Margin="0,0,0,16"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Name -->
                <TextBlock Text="Name" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="NameTextBox" Padding="8" Margin="0,0,0,16"/>

                <!-- Description -->
                <TextBlock Text="Description" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="DescriptionTextBox" Padding="8" TextWrapping="Wrap"
                         AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16"/>

                <!-- Command -->
                <TextBlock Text="Command / Syntax" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="CommandTextBox" Padding="8" TextWrapping="Wrap"
                         AcceptsReturn="True" Height="100" VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" Margin="0,0,0,16"/>

                <!-- Expected Result -->
                <TextBlock Text="Expected Result" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="ExpectedResultTextBox" Padding="8" TextWrapping="Wrap"
                         AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16"/>

                <!-- Prep Steps -->
                <TextBlock Text="Preparation Steps" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="PrepStepsTextBox" Padding="8" TextWrapping="Wrap"
                         AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16"/>

                <!-- Priority -->
                <TextBlock Text="Priority" Foreground="#e0e0e0" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <ComboBox x:Name="PriorityComboBox" Padding="8" Margin="0,0,0,16">
                    <ComboBoxItem Content="Low" Tag="Low"/>
                    <ComboBoxItem Content="Medium" Tag="Medium"/>
                    <ComboBoxItem Content="High" Tag="High"/>
                    <ComboBoxItem Content="Critical" Tag="Critical"/>
                </ComboBox>

                <!-- Automated Test -->
                <CheckBox x:Name="IsAutomatedCheckBox" Content="Automated Test"
                          Foreground="#e0e0e0" Margin="0,0,0,16"
                          ToolTip="Check if this test has automated testing coverage"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="CancelButton" Content="Cancel"
                    Width="100" Padding="12,8"
                    Background="#3d3d3d" Foreground="#e0e0e0" BorderThickness="0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" Content="Save"
                    Width="100" Padding="12,8" Margin="12,0,0,0"
                    Background="#0078d4" Foreground="White" BorderThickness="0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
